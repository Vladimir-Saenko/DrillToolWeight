    <script type="text/javascript">
        var timerId;
        var init = false;
        $(document).ready(function () {
            setTimeout(GetQuotes, 2000);
            //GetQuotes();

            $('#js-modal-dialog').on('hidden.bs.modal',
                function (e) {
                    $('#indexVideo')[0].pause();
                });
        });

        function showIndexVideo() {
            $('#js-modal-dialog').modal();
            $('#indexVideo')[0].play();
        }

        function hideIndexVideo() {
            $('#js-modal-dialog').modal('hide');
        }


        function GetQuotes() {
            $.ajax({
                method: "POST",
                url: "/api/BidAskForex"
            })
                .done(function (quotes) {
                    var tickersHtml = MakeQuotesBlock(quotes);
                    if (tickersHtml) {
                        if (!init) {
                            init = true;
                            $("#webticker").append(tickersHtml);
                            $("#webticker").webTicker();
                        } else {
                            $("#webticker").webTicker('update', tickersHtml, 'swap', true, true);
                        }
                    }
                    setTimeout(GetQuotes, 5000);
                });
        }

        function MakeQuotesBlock(quotes) {
            var html = '';
            if (!quotes)
                return html;

            for (var i = 0; i < quotes.length; i++) {
                var changeFloat = parseFloat(quotes[i].Change);
                var sign = '+';
                var cssClass = 'ticket-up';
                if (changeFloat < 0) {
                    sign = '';
                    cssClass = 'ticket-down';
                }
                html += '<li data-update=' +
                    quotes[i].Code +
                    '><span class="' +
                    cssClass +
                    '">' +
                    quotes[i].Code +
                    ' ' +
                    quotes[i].AskString +
                    ' ' +
                    sign +
                    quotes[i].Change +
                    '<span class="count">' +
                    sign +
                    quotes[i].ChangePercent +
                    ' %</span></span></li>';

            }
            return html;
        }
    </script>


